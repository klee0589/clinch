{
  "name": "clinch",
  "version": "1.0.0",
  "private": true,
  "description": "Muay Thai trainer and trainee marketplace platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@clinch/web",
    "dev:mobile": "npm run dev --workspace=@clinch/mobile",
    "build:web": "npm run build --workspace=@clinch/web",
    "build:mobile": "npm run build --workspace=@clinch/mobile",
    "db:generate": "npm run generate --workspace=@clinch/database",
    "db:migrate": "npm run migrate --workspace=@clinch/database",
    "db:studio": "npm run studio --workspace=@clinch/database",
    "test": "npm run test --workspace=@clinch/shared && cd packages/web && npm test && cd ../..",
    "test:web": "cd packages/web && npm test",
    "test:shared": "npm run test --workspace=@clinch/shared",
    "prepare": "husky"
  },
  "keywords": [
    "muay-thai",
    "trainer",
    "marketplace"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
